<h1>Add A New Post</h1>

<%= form_for @post do |f| %>

    <% if @post.errors.any? %>
        <h2>Errors:</h2>
        <ul>
            <% @post.errors.full_messages.each do |mssg| %>
                <li><%= mssg %></li>
            <% end %>
        </ul>
    <% end %>

    <p>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :content %><br />
        <%= f.text_area :content %>
    </p>
    <p>
        <%= f.submit "Add Post" %>
    </p>
<% end %>